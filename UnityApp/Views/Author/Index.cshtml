@model IEnumerable<Author>

<h2>Authors</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create", "Author")">Add Author</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.Age</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Edit", "Author", new { id = author.Id })">Edit</a>
                    <form asp-action="Delete" asp-controller="Author" method="post" onsubmit="return confirm('Are you sure you want to delete this author?');">
                        <input type="hidden" name="id" value="@author.Id" />
                        <button type="submit">Delete</button>
                    </form>

              
                </td>
            </tr>
        }
    </tbody>
</table>
